  3.5769299087475414`*^9, 3.576930061216262*^9}, {3.5769301041197157`*^9, 
  3.5769302077876453`*^9}, {3.576954874727514*^9, 3.5769548961957417`*^9}, {
  3.5769549360770226`*^9, 3.5769549895170794`*^9}},
 TextAlignment->Left,
